@model EmpleadoViewModel
@{
    ViewData["Title"] = "Editar Empleado";
}

<h2>Editar Empleado</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Codigo"></label>
        <input asp-for="Codigo" class="form-control @(ViewData.ModelState["Codigo"]?.Errors.Any() == true ? "is-invalid" : "")" "   />
        <span asp-validation-for="Codigo" class="invalid-feedback"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control @(ViewData.ModelState["Nombre"]?.Errors.Any() == true ? "is-invalid" : "")" />
        <span asp-validation-for="Nombre" class="invalid-feedback"></span>
    </div>
    <div class="form-group mb-2">
        <label>Jefe Directo</label>
        <select asp-for="IdJefe" asp-items="Model.JefesDisponibles" class="form-select">
            <option value="">-- Sin jefe --</option>
        </select>
    </div>
    <div class="form-group mb-3">
        <label>Puesto</label>
        <select asp-for="IdPuesto" asp-items="Model.PuestosDisponibles" class="form-select @(ViewData.ModelState["IdPuesto"]?.Errors.Any() == true ? "is-invalid" : "")" ">
            <option value="">-- Selecciona un puesto --</option>
        </select>
        <span asp-validation-for="IdPuesto" class="invalid-feedback"></span>
    </div>
    <button class="btn btn-success" type="submit">Actualizar</button>
</form>
