@model List<EmpleadoViewModel>

<h2>Lista de Empleados</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Puesto</th>
            <th>Jefe</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Nombre</td>
                <td>@emp.NombrePuesto</td>
                <td>@emp.IdJefe</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.Id">Editar</a> |
                    @* <a asp-action="Delete" asp-route-id="@emp.Id" onclick="return confirm(\' ¿Está seguro de eliminar este empleado?\')">Eliminar</a> *@
                    <form asp-action="Eliminar" asp-route-id="@emp.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Está seguro de eliminar este empleado?')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link p-0 m-0 align-baseline">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-action="Create">Nuevo Empleado</a>
